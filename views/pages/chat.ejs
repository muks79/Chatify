  <body>
    <div id="bhar" style="
        height: 36px;
        /*! background-color: background: rgb(19,18,18); */
        /*! background: linear-gradient(90deg, rgba(19,18,18,1) 0%, rgba(33,32,32,1) 48%, rgba(17,16,16,1) 92%); */
        display: flex;
        align-content: center;
        justify-content: center;
        background: black;
        box-shadow: bisque;
        /*! box-shadow: 26px 32px 33px 12px rgba(0, 0, 0, 0.2); */
      ">
      <img src="https://www.freeiconspng.com/uploads/live-chat-icon-13.png" alt="Simple Png Live Chat" style="width: 32px">
      <span id="logo" style="color: aliceblue;padding-top: 6px;padding-left: 11px;"> M-Chat </span>
    </div>
    <div class="container-fluid">
      <div class="row" style="background: rgb(18,11,11);background: linear-gradient(90deg, rgba(18,11,11,1) 0%, rgba(47,40,40,1) 0%, rgba(22,17,17,1) 92%);">
        <div class="col-12 col-md-12 col-lg-12 pb-5" id="chat-area" style="color: aqua;">
       
        </div>
    </div>
        <div id="bhar2" style="display: flex;">
        <div class="col-10 col-md-11 col-lg-11 p-2" id="msg-area">
          <input type="text" class="form-input chat-msg" id="chat-msg" placeholder="Enter your message">
        </div>
        <div class="col-2 col-md-1 col-lg-1 p-2 sendButton" style="border: cadetblue;border-radius: 56px;">
          <button class="send-msg" style="border: aqua;border-radius: 55px;">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </div>
      
    </div>

    <!-- Socket.io -->
    <script src="/socket.io/socket.io.js"></script>

